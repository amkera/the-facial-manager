<div class="title-container">
  <h1>All Facial Appointments</h1>
</div>


<div class="facials">
  <%@facials.each do |facial|%>
    <div class="facial">
      <div class="thumbnail">
        <div class="caption">

            <label>Client: </label><%=link_to facial.client.full_name, client_path(facial.client_id) %><br />
            <label>Date: </label><%=link_to facial.facial_date.strftime("%A, %b %d, %Y"), facial_path(facial)%><br>
            <label>Time: </label><%=facial.facial_time.strftime("%I:%M %p")%><br>
            <h4>Booked With: <%= link_to facial.esthetician.email, esthetician_facials_path(facial.esthetician) %></h4>

            <div class="facial">
              <% if facial.esthetician == current_esthetician %>
                <%= button_to "Delete Appointment", facial, method: :delete, data: { confirm: "Are you sure?" } %>
              <%end%>
            </div>
          </div>
    </div>
  </div>
<% end %>
</div>
